<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

        <item android:state_pressed="false">
            <shape>
                <gradient

                    android:angle="270"/>

                <stroke
                    android:width="3dp"
                    android:dashWidth="2dp"
                    android:color="@color/YellowApp"/>
                <corners android:radius="5dp"/>
            </shape>
        </item>
        <item android:state_pressed="true">
            <shape>
                <gradient

                    android:startColor="@color/BlackHide"
                    android:endColor="@color/BlackHide"
                    android:angle="270"/>

                <stroke
                    android:width="3dp"
                    android:dashWidth="2dp"/>

                <corners android:radius="5dp"/>
            </shape>
        </item>


    </selector>
