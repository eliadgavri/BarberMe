<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_splash"
    android:orientation="vertical">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/YellowDark"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Barber Shop"
                android:textSize="40sp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/add_barbershop_tv"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textSize="17.5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/YellowApp"
                    android:hint="Barbershop name"
                    android:id="@+id/name_et"/>

                <EditText
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/YellowApp"
                    android:textSize="17.5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:id="@+id/city_et"/>

                <EditText
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textSize="17.5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address_et"
                    android:hint="Address"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/YellowApp"/>

                <EditText
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textSize="17.5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phone_et"
                    android:hint="Phone number"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/YellowApp"/>


                <EditText
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textSize="17.5sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/website_et"
                    android:textColorHint="@color/White"
                    android:textColor="@color/White"
                    android:backgroundTint="@color/YellowApp"
                    android:hint="Website"/>


                <ImageButton
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upload"
                    android:background="@drawable/shape_selector_transparent"
                    android:src="@drawable/ic_baseline_add_photo_alternate__orange24"
                    android:id="@+id/upload_button"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pictures count: 0 / 0"
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textSize="17.5sp"
                    android:textColor="@color/White"
                    android:layout_below="@+id/upload_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginVertical="10dp"
                    android:id="@+id/pictures_count_tv"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recyclerview_pics"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/finish_button"
                    android:layout_marginTop="30dp"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:background="@drawable/shape_selector_yellow_dark"
                    android:text="Add Barber shop"/>
            </LinearLayout>
        </LinearLayout>>
    </ScrollView>
</LinearLayout>
