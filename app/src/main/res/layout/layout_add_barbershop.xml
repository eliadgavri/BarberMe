<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:verticalScrollbarPosition="defaultPosition"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Barber Shop"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/add_barbershop_tv"/>


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Barbershop name"
            android:id="@+id/name_et"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="City"
            android:id="@+id/city_et"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_et"
            android:hint="Address"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:backgroundTint="@color/YellowApp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_et"
            android:hint="Phone number"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:backgroundTint="@color/YellowApp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/website_et"
            android:textColorHint="@color/White"
            android:textColor="@color/White"
            android:backgroundTint="@color/YellowApp"
            android:hint="Website"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Upload"
                android:textSize="20sp"
                android:padding="20dp"
                android:id="@+id/upload_button"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pictures Count: 0 / 0"
            android:textSize="20sp"
            android:layout_below="@+id/upload_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            android:id="@+id/pictures_count_tv"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pictures_count_tv"
            android:id="@+id/recyclerview_pics"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:layout_below="@+id/recyclerview_pics"
            android:id="@+id/finish_layout"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:textSize="20sp"
                android:padding="20dp"
                android:id="@+id/finish_button"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>