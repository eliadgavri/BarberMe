<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/barColor</item>
        <item name="colorPrimaryDark">@color/cardViewColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PreferenceTheme" parent="@style/AppTheme">
        <item name="android:colorBackground">@color/BlackHide</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AlertDialog.Builder" parent="android:style/Theme.Dialog">
        <item name="android:textColor">#FFF</item>
        <item name="actionMenuTextColor">#FFF</item>
        <item name="textColorAlertDialogListItem">#FFF</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>